<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:clickable="false"
    android:focusable="true"
    android:paddingBottom="7dip"
    android:paddingLeft="7dip"
    android:paddingRight="7dip"
    android:paddingTop="7dip" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.massvig.ecommerce.widgets.NetImageView
            android:id="@+id/headimg"
            android:layout_width="71.33333dip"
            android:layout_height="71.33333dip"
            android:scaleType="fitCenter"
            android:src="@drawable/commutity_user_icon_new_d" />

        <ImageView
            android:id="@+id/sex"
            android:layout_width="34.666dip"
            android:layout_height="36.666dip"
            android:layout_alignRight="@id/headimg"
            android:src="@drawable/sex_m"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dip"
            android:background="@drawable/bg_message_number"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/color_white"
            android:textSize="10dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="8dip" >

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lines="1"
            android:paddingTop="2dip"
            android:singleLine="true"
            android:text="瓢虫fdafdafdafdsa"
            android:textColor="@color/color_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dip" >

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:singleLine="true"
                android:text="[0.02km]"
                android:textColor="@color/color_black_text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="瓢虫fdafdafdsafdsafdafdas"
                android:textColor="@color/color_black_text"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="right"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:lines="1"
            android:singleLine="true"
            android:text="一分钟前"
            android:textColor="@color/color_black_text"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>