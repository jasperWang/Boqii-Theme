<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/deals_list_bar_box"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" >

        <LinearLayout
            android:id="@+id/cate_gory_bar_btn1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/category_dialog_view_bg1"
            android:gravity="center_vertical"
            android:padding="5dip" >

            <ImageView
                android:id="@+id/img"
                android:layout_width="23.33dip"
                android:layout_height="23.33dip"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:paddingLeft="5dip"
                android:singleLine="true"
                android:text="全部"
                android:textColor="@color/color_title_text"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_dialog_view_icon3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mask"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:visibility="invisible" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/cate_gory_bar_btn2"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/category_dialog_view_bg1"
        android:gravity="center_vertical"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:singleLine="true"
            android:text="默认排序"
            android:textColor="@color/color_title_text"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/category_dialog_view_icon3" />
    </LinearLayout>

    <TextView
        android:id="@+id/cate_gory_bar_btn3"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:drawableLeft="@drawable/bg_price_filter"
        android:background="@drawable/category_dialog_view_bg1"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:paddingLeft="20dip"
        android:visibility="gone"
        android:drawablePadding="10dip"
        android:text="筛选"
        android:textColor="@color/color_title_text"
        android:textSize="14sp" />

</LinearLayout>