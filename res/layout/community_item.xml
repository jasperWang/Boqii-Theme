<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/goods_item_bg_pic"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:padding="5dip" >

        <com.massvig.ecommerce.widgets.NetImageView
            android:id="@+id/headimg"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/commutity_user_icon_d" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/headimg"
            android:text="fdafd"
            android:textColor="@color/color_black"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/headimg"
            android:text="fdafd"
            android:textColor="@color/color_light_text"
            android:textSize="14dip" />
        
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dip"
            android:layout_alignParentTop="true"
            android:textSize="10dip"
            android:layout_height="wrap_content"
            android:text="晒了一整周"
            android:textColor="@color/color_light_text"
            android:singleLine="true" />
    </RelativeLayout>

    <com.massvig.ecommerce.widgets.NetImageView
        android:id="@+id/imageview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/default_icon"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="精致可爱的一款白搭T恤面料带弹性，穿着舒适是个电话撒uf放大镜看话费 宏发大厦范德萨啊"
        android:textColor="@color/color_black_text"
        android:textSize="13dip" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_marginTop="5dip"
        android:background="@drawable/line" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:padding="5dip" >

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:textSize="10dip"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:text="分享内容参与了 秀床照活动"
            android:textColor="@color/color_light_text"
            android:layout_marginBottom="5dip"
            android:singleLine="true" />

        <TextView
            android:id="@+id/praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="5dip"
            android:drawableLeft="@drawable/ic_praise_01"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/color_light_text"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="5dip"
            android:paddingRight="15dip"
            android:layout_toLeftOf="@id/praise"
            android:drawableLeft="@drawable/ic_share_01"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/color_light_text"
            android:textSize="14dip" />
    </RelativeLayout>

</LinearLayout>