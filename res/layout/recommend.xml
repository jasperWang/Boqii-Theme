<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_page"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_title"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_btn"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/color_title_text"
            android:textSize="13dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="推荐应用"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="#88ffffff"
            android:textColor="@color/color_title_text"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_btn"
            android:gravity="center"
            android:visibility="invisible"
            android:text="修改"
            android:textColor="@color/color_title_text"
            android:textSize="13dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/aimai"
        android:layout_margin="8dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/goods_item_bg_icon"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/appicon"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@drawable/icon" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爱买"
                android:textColor="#434f5a"
                android:textSize="15dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="“爱买”是巨兴科技精心为新一代都市人打造的团购导购、购买平台。"
                android:textColor="#99434f5a"
                android:textSize="12dip" />
        </LinearLayout>

        <ImageView
        android:layout_width="8dip"
        android:layout_height="14dip"
            android:background="@drawable/goods_item_bg_arr" />
    </LinearLayout>

</LinearLayout>