<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#e3e3e3" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_title">
         <Button
        android:id="@+id/go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/left_btn"
        android:text="返回"
        android:textColor="@color/color_title_text"
        android:textSize="13dip"/>
       <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="center"
             android:shadowColor="#88ffffff"
             android:shadowDy="1"
             android:shadowRadius="1"
             android:text="意见反馈"
             android:textColor="@color/color_title_text"
             android:textSize="20dip" />
           
            <Button 
                android:id="@+id/go_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textSize="13dip"
                android:gravity="center"
                android:background="@drawable/right_btn"
                android:textColor="@color/color_white"/>
    </LinearLayout>
        <EditText
        android:id="@+id/write" 
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:hint="快对我们说点什么吧!"
        android:enabled="true"
        android:layout_margin="5dip"
        android:textSize="14dip"
        android:textColor="#b2b5be"
        android:fadingEdge="none"
        android:maxLength="500"
        android:textColorHint="#999"
        android:gravity="top"
        android:background="@drawable/sharp"
        android:padding="10dip"
        android:imeOptions="actionSend"/>  

       <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thanks"
        android:textSize="12sp"
        android:textColor="#949497"
        android:layout_marginTop="1px"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="20dip"
        android:layout_below="@+id/write"
        />    
</LinearLayout>